<div class="login-box">
  <h3>Sign in</h3>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="control-group"><%= f.email_field :email, autofocus: true, placeholder: "Enter your email", class: "d-field" %></div>

    <div class="control-group"><%= f.password_field :password, placeholder: "Password", class: "d-field" %></div>

    <div><%= f.submit "Sign in", class: "btn btn-primary" %></div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
