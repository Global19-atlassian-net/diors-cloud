<div class="signup-box">
<h3>Sign up</h3>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group"><%= f.email_field :email, :autofocus => true, placeholder: "Enter your email", class: "d-field" %></div>

  <div class="control-group"><%= f.password_field :password, placeholder: "Password", class: "d-field" %></div>

  <div class="control-group"><%= f.password_field :password_confirmation, placeholder: "Password confirmation", class: "d-field" %></div>

  <div><%= f.submit "Sign up", class: "btn btn-primary" %></div>
<% end %>

<%= render "users/shared/links" %>
